<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-films-table" author="javatheque">
        <createTable tableName="films">
            <column name="id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="library_id" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="poster" type="VARCHAR(500)"/>
            <column name="lang" type="VARCHAR(10)"/>
            <column name="support" type="VARCHAR(50)"/>
            <column name="title" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="release_date" type="VARCHAR(20)"/>
            <column name="year" type="VARCHAR(10)"/>
            <column name="rate" type="FLOAT"/>
            <column name="opinion" type="TEXT"/>
            <column name="director_firstname" type="VARCHAR(255)"/>
            <column name="director_lastname" type="VARCHAR(255)"/>
        </createTable>
        
        <addForeignKeyConstraint
                baseTableName="films"
                baseColumnNames="library_id"
                constraintName="fk_films_library"
                referencedTableName="libraries"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
        
        <createIndex tableName="films" indexName="idx_films_library_id">
            <column name="library_id"/>
        </createIndex>
        
        <createIndex tableName="films" indexName="idx_films_title">
            <column name="title"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

