<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-libraries-table" author="javatheque">
        <createTable tableName="libraries">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="owner_id" type="VARCHAR(36)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint
                baseTableName="users"
                baseColumnNames="library_id"
                constraintName="fk_users_library"
                referencedTableName="libraries"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
        
        <createIndex tableName="libraries" indexName="idx_libraries_owner_id">
            <column name="owner_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

